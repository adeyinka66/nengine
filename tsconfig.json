{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true, // Reuses compilation data
    "tsBuildInfoFile": "./.cache/tsbuildinfo", // Caches to disk
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"]
  },
  // "include": ["src/**/*"],
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "files": ["./src/types.d.ts"]
}
